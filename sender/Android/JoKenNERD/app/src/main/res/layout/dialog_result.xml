<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/accent"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_img_you"
            android:layout_width="@dimen/game_image_size"
            android:layout_height="@dimen/game_image_size"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/game_image_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/apptheme_color"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_img_com"
            android:layout_width="@dimen/game_image_size"
            android:layout_height="@dimen/game_image_size"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/game_image_margin" />
    </LinearLayout>

    <!--  <TextView
          android:id="@+id/dialog_tv_result_extended"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center" />
  -->
</LinearLayout>
